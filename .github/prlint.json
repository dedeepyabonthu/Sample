{
  "title": [
    {
      "pattern": "JIRA-\\d{1,4}",
      "flags": ["i"],
      "message": "You need a JIRA ticket in your title"
    }
  ],
  "description": [
    {
      "pattern": ".{25,}",
      "message": "Add details in the description"
    }
  ],
  "head.ref": [
    {
      "pattern": "^(feature|hotfix|master|develop|release|dependabot)/",
      "message": "Your branch name is invalid"
    }
  ],
  "assignee.login": [
    {
      "pattern": ".+",
      "message": "You need to assign someone"
    }
  ],
  "requested_reviewers.0.id": [
    {
      "pattern": ".+",
      "message": "You need to add a reviewer"
    }
  ],
  "additions": [
    {
      "pattern": "0|^[1-9]$|^[1-9]\\d$",
      "message": "Your PR is too big (over 99 additions)"
    }
  ]
}